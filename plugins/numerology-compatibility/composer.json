{
  "name": "numerology/compatibility-calculator",
  "description": "WordPress plugin for numerology compatibility calculations",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Ruslan Novikov",
      "email": "ruslan.novikov@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.4",
    "guzzlehttp/guzzle": "^7.5",
    "monolog/monolog": "^2.8"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "mockery/mockery": "^1.5",
    "brain/monkey": "^2.6"
  },
  "autoload": {
    "psr-4": {
      "NC\\": "includes/",
      "NC\\Admin\\": "admin/",
      "NC\\PublicSite\\": "public/",
      "NC\\Api\\": "api/",
      "NC\\Database\\": "database/"
    },
    "exclude-from-classmap": [
      "includes/",
      "admin/",
      "public/",
      "api/",
      "database/"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "NC\\Tests\\": "tests/"
    },
    "exclude-from-classmap": [
      "tests/"
    ]
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  }
}