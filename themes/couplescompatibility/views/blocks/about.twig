{#
    About/Benefits section
    ACF fields: about_title, about_description,
                benefit1_title, benefit1_description,
                benefit2_title, benefit2_description,
                benefit3_title, benefit3_description
#}

<section class="py-20 bg-gray-50">
    <div class="container mx-auto px-6">
        <div class="max-w-4xl mx-auto text-center">
            <h2 class="text-4xl md:text-5xl font-bold text-gray-800 mb-6">
                {{ fields.about_title }}
            </h2>

            <p class="text-xl text-gray-600 mb-16 leading-relaxed max-w-3xl mx-auto">
                {{ fields.about_description }}
            </p>

            <div class="grid md:grid-cols-3 gap-8">
                {# Benefit 1 #}
                <div class="bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
                    <div class="mb-6 flex justify-center">
                        <div class="p-4 bg-purple-100 rounded-full">
                            <svg class="w-8 h-8 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2V5a2 2 0 00-2-2H5zM5 11a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2v-2a2 2 0 00-2-2H5zM11 5a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V5zM11 13a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/>
                            </svg>
                        </div>
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-4">
                        {{ fields.benefit1_title }}
                    </h3>
                    <p class="text-gray-600 leading-relaxed">
                        {{ fields.benefit1_description }}
                    </p>
                </div>

                {# Benefit 2 #}
                <div class="bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
                    <div class="mb-6 flex justify-center">
                        <div class="p-4 bg-purple-100 rounded-full">
                            <svg class="w-8 h-8 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                            </svg>
                        </div>
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-4">
                        {{ fields.benefit2_title }}
                    </h3>
                    <p class="text-gray-600 leading-relaxed">
                        {{ fields.benefit2_description }}
                    </p>
                </div>

                {# Benefit 3 #}
                <div class="bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
                    <div class="mb-6 flex justify-center">
                        <div class="p-4 bg-purple-100 rounded-full">
                            <svg class="w-8 h-8 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                            </svg>
                        </div>
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-4">
                        {{ fields.benefit3_title }}
                    </h3>
                    <p class="text-gray-600 leading-relaxed">
                        {{ fields.benefit3_description }}
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
