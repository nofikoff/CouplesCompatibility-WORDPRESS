{#
    Reviews/Testimonials section
    ACF fields: reviews_title,
                review1_avatar, review1_name, review1_age, review1_location, review1_text,
                review2_avatar, review2_name, review2_age, review2_location, review2_text,
                review3_avatar, review3_name, review3_age, review3_location, review3_text
#}

<section class="py-20 bg-white">
    <div class="container mx-auto px-6">
        <div class="max-w-6xl mx-auto">
            <div class="text-center mb-16">
                <h2 class="text-4xl md:text-5xl font-bold text-gray-800 mb-6">
                    {{ fields.reviews_title }}
                </h2>
            </div>

            <div class="grid md:grid-cols-3 gap-8">
                {# Review 1 #}
                <div class="bg-gradient-to-br from-purple-50 to-white p-8 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 relative">
                    <svg class="absolute top-4 right-4 w-8 h-8 text-purple-300 opacity-50" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
                    </svg>

                    <div class="flex items-center mb-6">
                        {% if fields.review1_avatar %}
                        <img
                            src="{{ fields.review1_avatar }}"
                            alt="{{ fields.review1_name }}"
                            class="w-16 h-16 rounded-full object-cover mr-4 ring-4 ring-purple-100"
                        />
                        {% else %}
                        <div class="w-16 h-16 rounded-full bg-purple-200 flex items-center justify-center mr-4 ring-4 ring-purple-100">
                            <span class="text-2xl font-bold text-purple-600">{{ fields.review1_name|first|upper }}</span>
                        </div>
                        {% endif %}
                        <div>
                            <h4 class="font-bold text-gray-800">{{ fields.review1_name }}{% if fields.review1_age %}, {{ fields.review1_age }}{% endif %}</h4>
                            {% if fields.review1_location %}
                            <p class="text-purple-600 text-sm">{{ fields.review1_location }}</p>
                            {% endif %}
                        </div>
                    </div>

                    <div class="flex mb-4">
                        {% for i in 1..5 %}
                        <svg class="w-5 h-5 text-yellow-400 fill-current" viewBox="0 0 20 20">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                        </svg>
                        {% endfor %}
                    </div>

                    <blockquote class="text-gray-700 text-lg italic leading-relaxed">
                        {{ fields.review1_text }}
                    </blockquote>
                </div>

