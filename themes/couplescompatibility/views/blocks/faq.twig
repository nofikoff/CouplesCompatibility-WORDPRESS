        <div class="max-w-4xl mx-auto">
            <div class="text-center mb-16">
                <h2 class="text-4xl md:text-5xl font-bold text-gray-800 mb-6">
                    {{ fields.faq_title }}
                </h2>
            </div>

            <div class="space-y-4">
                {# FAQ 1 #}
                {% if fields.faq1_question %}
