                    <div class="px-8 py-6">
                        <h3 class="text-lg font-semibold text-gray-800 mb-4">
                            {{ fields.faq1_question }}
                        </h3>
                        <div class="pt-4 border-t border-purple-100">
                            <p class="text-gray-600 leading-relaxed">
                                {{ fields.faq1_answer }}
                            </p>
                        </div>
                    </div>
                </div>
                {% endif %}

