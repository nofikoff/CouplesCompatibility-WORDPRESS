{#
    Features section block
    Expected data structure: title, description, items (array of features)
#}

<section class="py-12 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

        {% if data.title %}
        <div class="text-center">
            <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
                {{ data.title }}
            </h2>
            {% if data.description %}
            <p class="mt-4 max-w-2xl text-xl text-gray-500 mx-auto">
                {{ data.description }}
            </p>
            {% endif %}
        </div>
        {% endif %}

        {% if data.items %}
        <div class="mt-10">
            <div class="grid grid-cols-1 gap-10 sm:grid-cols-2 lg:grid-cols-3">
                {% for item in data.items %}
                <div class="flex flex-col items-center text-center">
                    {% if item.icon %}
                    <div class="flex items-center justify-center h-12 w-12 rounded-md bg-indigo-500 text-white">
                        <img src="{{ item.icon.url }}" alt="{{ item.icon.alt }}" class="h-6 w-6">
                    </div>
                    {% endif %}
                    <h3 class="mt-4 text-lg font-medium text-gray-900">{{ item.title }}</h3>
                    <p class="mt-2 text-base text-gray-500">{{ item.description }}</p>
                </div>
                {% endfor %}
            </div>
        </div>
        {% else %}
        <div class="mt-10 text-center text-gray-400">
            {{ __('No features configured yet.', 'ai-landing') }}
        </div>
        {% endif %}

    </div>
</section>
