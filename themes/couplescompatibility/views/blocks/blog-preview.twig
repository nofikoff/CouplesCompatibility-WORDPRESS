{#
    Blog posts preview - random posts
    ACF fields: blog_section_title
#}

<section class="py-20 bg-gray-50">
    <div class="container mx-auto px-6">
        <div class="max-w-6xl mx-auto">
            <div class="text-center mb-16">
                <h2 class="text-4xl md:text-5xl font-bold text-gray-800 mb-6">
                    {{ fields.blog_section_title ?: function('__', 'From Our Blog', 'couplescompatibility') }}
                </h2>
            </div>
            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
            {% for post in blog_posts %}
            <a href="{{ post.link }}" class="bg-white rounded-xl p-6 shadow-md hover:shadow-lg transition-shadow">
                <h3 class="font-semibold text-gray-900 mb-3 line-clamp-2">{{ post.title }}</h3>
                <p class="text-gray-600 text-sm line-clamp-3">{{ post.preview }}</p>
            </a>
            {% endfor %}
            </div>
        </div>
    </div>
</section>
