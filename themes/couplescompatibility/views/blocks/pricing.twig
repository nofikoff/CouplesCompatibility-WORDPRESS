{#
    Pricing section
    ACF fields: pricing_title, plan_popular_badge,
                plan_free_name, plan_free_price, plan_free_cta, plan_free_feature1, plan_free_feature2,
                plan_basic_name, plan_basic_price, plan_basic_cta, plan_basic_feature1, plan_basic_feature2,
                plan_extended_name, plan_extended_price, plan_extended_cta, plan_extended_feature1, plan_extended_feature2, plan_extended_feature3
#}

<section class="py-20 bg-gray-50">
    <div class="container mx-auto px-6">
        <div class="max-w-6xl mx-auto">
            <div class="text-center mb-16">
                <h2 class="text-4xl md:text-5xl font-bold text-gray-800 mb-6">
                    {{ fields.pricing_title }}
                </h2>
            </div>

            <div class="grid md:grid-cols-3 gap-8">
                {# Free Plan #}
                <div class="relative bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
                    <div class="p-8">
                        <div class="text-center mb-8">
                            <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-gray-500 to-gray-600 text-white rounded-full mb-4">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                                </svg>
                            </div>
                            <h3 class="text-2xl font-bold text-gray-800 mb-2">{{ fields.plan_free_name }}</h3>
                            <div class="text-4xl font-bold text-purple-600 mb-1">{{ fields.plan_free_price }}</div>
                        </div>

                        <ul class="space-y-4 mb-8">
                            {% if fields.plan_free_feature1 %}
                            <li class="flex items-start">
                                <svg class="w-5 h-5 text-green-500 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                </svg>
                                <span class="text-gray-600">{{ fields.plan_free_feature1 }}</span>
                            </li>
                            {% endif %}
                            {% if fields.plan_free_feature2 %}
                            <li class="flex items-start">
                                <svg class="w-5 h-5 text-green-500 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                </svg>
                                <span class="text-gray-600">{{ fields.plan_free_feature2 }}</span>
                            </li>
                            {% endif %}
                        </ul>

                        <button class="w-full bg-gradient-to-r from-gray-500 to-gray-600 text-white font-bold py-4 px-6 rounded-lg hover:opacity-90 transform hover:scale-105 transition-all duration-200 shadow-lg hover:shadow-xl">
                            {{ fields.plan_free_cta }}
                        </button>
                    </div>
                </div>

                {# Basic Plan (Popular) #}
                <div class="relative bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 ring-4 ring-purple-200 scale-105">
                    <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
                        <div class="bg-gradient-to-r from-purple-600 to-purple-700 text-white px-6 py-2 rounded-full text-sm font-bold">
                            {{ fields.plan_popular_badge }}
                        </div>
                    </div>

                    <div class="p-8">
                        <div class="text-center mb-8">
                            <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-purple-600 to-purple-700 text-white rounded-full mb-4">
                                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                                </svg>
                            </div>
                            <h3 class="text-2xl font-bold text-gray-800 mb-2">{{ fields.plan_basic_name }}</h3>
                            <div class="text-4xl font-bold text-purple-600 mb-1">{{ fields.plan_basic_price }}</div>
                        </div>

                        <ul class="space-y-4 mb-8">
                            {% if fields.plan_basic_feature1 %}
                            <li class="flex items-start">
                                <svg class="w-5 h-5 text-green-500 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                </svg>
                                <span class="text-gray-600">{{ fields.plan_basic_feature1 }}</span>
                            </li>
                            {% endif %}
                            {% if fields.plan_basic_feature2 %}
                            <li class="flex items-start">
                                <svg class="w-5 h-5 text-green-500 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                </svg>
                                <span class="text-gray-600">{{ fields.plan_basic_feature2 }}</span>
                            </li>
                            {% endif %}
                        </ul>

                        <button class="w-full bg-gradient-to-r from-purple-600 to-purple-700 text-white font-bold py-4 px-6 rounded-lg hover:opacity-90 transform hover:scale-105 transition-all duration-200 shadow-lg hover:shadow-xl">
                            {{ fields.plan_basic_cta }}
                        </button>
                    </div>
                </div>

                {# Extended Plan #}
                <div class="relative bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
                    <div class="p-8">
                        <div class="text-center mb-8">
                            <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-yellow-500 to-yellow-600 text-white rounded-full mb-4">
                                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M5 2a1 1 0 011 1v1h1a1 1 0 010 2H6v1a1 1 0 01-2 0V6H3a1 1 0 010-2h1V3a1 1 0 011-1zm0 10a1 1 0 011 1v1h1a1 1 0 110 2H6v1a1 1 0 11-2 0v-1H3a1 1 0 110-2h1v-1a1 1 0 011-1zM12 2a1 1 0 01.967.744L14.146 7.2 17.5 9.134a1 1 0 010 1.732L14.146 12.8l-1.179 4.456a1 1 0 01-1.934 0L9.854 12.8 6.5 10.866a1 1 0 010-1.732L9.854 7.2l1.179-4.456A1 1 0 0112 2z" clip-rule="evenodd"/>
                                </svg>
                            </div>
                            <h3 class="text-2xl font-bold text-gray-800 mb-2">{{ fields.plan_extended_name }}</h3>
                            <div class="text-4xl font-bold text-purple-600 mb-1">{{ fields.plan_extended_price }}</div>
                        </div>

                        <ul class="space-y-4 mb-8">
                            {% if fields.plan_extended_feature1 %}
                            <li class="flex items-start">
                                <svg class="w-5 h-5 text-green-500 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                </svg>
                                <span class="text-gray-600">{{ fields.plan_extended_feature1 }}</span>
                            </li>
                            {% endif %}
                            {% if fields.plan_extended_feature2 %}
                            <li class="flex items-start">
                                <svg class="w-5 h-5 text-green-500 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                </svg>
                                <span class="text-gray-600">{{ fields.plan_extended_feature2 }}</span>
                            </li>
                            {% endif %}
                            {% if fields.plan_extended_feature3 %}
                            <li class="flex items-start">
                                <svg class="w-5 h-5 text-green-500 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                </svg>
                                <span class="text-gray-600">{{ fields.plan_extended_feature3 }}</span>
                            </li>
                            {% endif %}
                        </ul>

                        <button class="w-full bg-gradient-to-r from-yellow-500 to-yellow-600 text-white font-bold py-4 px-6 rounded-lg hover:opacity-90 transform hover:scale-105 transition-all duration-200 shadow-lg hover:shadow-xl">
                            {{ fields.plan_extended_cta }}
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
