<!DOCTYPE html>
<html {{ site.language_attributes }}>
<head>
    <meta charset="{{ site.charset }}">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {# Подключаем Tailwind через CDN для теста (для продакшена нужна сборка) #}
    <script src="https://cdn.tailwindcss.com"></script>

    {{ function('wp_head') }}
</head>
<body class="{{ body_class }}">

    {# Хедер можно вынести в отдельный компонент #}
    <header class="p-4 bg-gray-100 flex justify-between">
        <div class="logo">{{ site.name }}</div>

        {# Переключатель языков (если Polylang активен) #}
        {% if languages %}
            <ul class="flex gap-2">
                {% for lang in languages %}
                    <li>
                        <a href="{{ lang.url }}" class="{{ lang.current_lang ? 'font-bold' : '' }}">
                            {{ lang.slug|upper }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    </header>

    <main role="main">
        {% block content %}
            {# Сюда вставится контент из landing.twig #}
        {% endblock %}
    </main>

    <footer class="p-8 bg-gray-900 text-white mt-10">
        &copy; {{ "now"|date("Y") }} {{ site.name }}
    </footer>

    {{ function('wp_footer') }}
</body>
</html>