{#
    Footer partial
    ACF Options fields: site_brand_name, site_description, site_email,
                        site_instagram_url, site_facebook_url,
                        site_privacy_url, site_terms_url, site_copyright
#}

<footer class="bg-gray-900 text-white py-16">
    <div class="container mx-auto px-6">
        <div class="max-w-6xl mx-auto">
            <div class="grid md:grid-cols-4 gap-8 mb-12">
                {# Logo and description #}
                <div class="md:col-span-2">
                    <div class="flex items-center mb-4">
                        <svg class="w-8 h-8 text-yellow-400 mr-3" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"/>
                        </svg>
                        <h3 class="text-2xl font-bold bg-gradient-to-r from-purple-400 to-yellow-400 bg-clip-text text-transparent">
                            {{ options.site_brand_name ?: site.name }}
                        </h3>
                    </div>
                    <p class="text-gray-300 leading-relaxed max-w-md">
                        {{ options.site_description }}
                    </p>
                </div>

                {# Contact #}
                <div>
                    <h4 class="text-lg font-semibold mb-4 text-purple-300">
                        {{ function('__', 'Contact', 'couplescompatibility') }}
                    </h4>
                    <div class="space-y-2">
                        {% if options.site_email %}
                        <a href="mailto:{{ options.site_email }}"
                           class="text-gray-300 hover:text-yellow-400 transition-colors duration-200">
                            {{ options.site_email }}
                        </a>
                        {% endif %}
                    </div>
                </div>

                {# Social Media #}
                <div>
                    <h4 class="text-lg font-semibold mb-4 text-purple-300">
                        {{ function('__', 'Follow Us', 'couplescompatibility') }}
                    </h4>
                    <div class="flex space-x-4">
                        {% if options.site_instagram_url %}
                        <a href="{{ options.site_instagram_url }}"
                           class="p-2 bg-purple-800 rounded-full hover:bg-purple-700 transition-colors duration-200 transform hover:scale-110"
                           target="_blank" rel="noopener">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                            </svg>
                        </a>
                        {% endif %}
                        {% if options.site_facebook_url %}
                        <a href="{{ options.site_facebook_url }}"
                           class="p-2 bg-purple-800 rounded-full hover:bg-purple-700 transition-colors duration-200 transform hover:scale-110"
                           target="_blank" rel="noopener">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                            </svg>
                        </a>
                        {% endif %}
                    </div>
                </div>
            </div>

            {# Bottom bar #}
            <div class="border-t border-gray-700 pt-8">
                <div class="flex flex-col md:flex-row justify-between items-center">
                    {# Page IDs: Privacy=627, Terms=682, About=621 #}
                    <div class="flex space-x-6 mb-4 md:mb-0">
                        <a href="{{ function('get_permalink', function('pll_get_post', 627) ?: 627) }}"
                           class="text-gray-300 hover:text-yellow-400 transition-colors duration-200 text-sm">
                            {{ function('__', 'Privacy Policy', 'couplescompatibility') }}
                        </a>
                        <a href="{{ function('get_permalink', function('pll_get_post', 682) ?: 682) }}"
                           class="text-gray-300 hover:text-yellow-400 transition-colors duration-200 text-sm">
                            {{ function('__', 'Terms of Service', 'couplescompatibility') }}
                        </a>
                        <a href="{{ function('get_permalink', function('pll_get_post', 621) ?: 621) }}"
                           class="text-gray-300 hover:text-yellow-400 transition-colors duration-200 text-sm">
                            {{ function('__', 'About', 'couplescompatibility') }}
                        </a>
                    </div>
                    <div class="text-gray-400 text-sm">
                        {{ '&copy; ' ~ "now"|date("Y") ~ ' ' ~ (options.site_copyright ?: site.name) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>
